<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/chart_test_refresh"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Refresh"/>
        <Button
            android:id="@+id/chart_test_expand"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Expand"/>
        <Button
            android:id="@+id/chart_test_collapse"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Collapse"/>
        <Button
            android:id="@+id/chart_test_edit"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Edit"/>
        <Button
            android:id="@+id/chart_test_delete_all"
            android:layout_width="0dp"
            android:layout_height="60dp"
            android:layout_weight="1"
            android:singleLine="true"
            android:text="Delete All"/>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <com.gazua.ddeokrok.coinman.view.ReorderableLinearLayout
            android:id="@+id/chart_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
        </com.gazua.ddeokrok.coinman.view.ReorderableLinearLayout>
    </ScrollView>
</LinearLayout>
