<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/coin_detail_layout_border">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/icon_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:orientation="vertical">
                <ImageView
                    android:id="@+id/coin_icon"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:scaleType="centerInside" />
                <TextView
                    android:id="@+id/coin_abb_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="BTC"
                    android:textAlignment="center" />
                <TextView
                    android:id="@+id/coin_represent_ratio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="+3.92%"
                    android:textAlignment="center"/>
            </LinearLayout>
        </RelativeLayout>

        <com.gazua.ddeokrok.coinman.view.ReorderableLinearLayout
            android:id="@+id/coin_detail_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical"
            android:gravity="center">
        </com.gazua.ddeokrok.coinman.view.ReorderableLinearLayout>

        <ImageView
            android:id="@+id/coin_info_thumb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.7"
            android:scaleType="centerInside"
            android:src="@drawable/move_grabber">
        </ImageView>
    </LinearLayout>
</LinearLayout>
