<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    android:orientation="vertical"
    android:padding="@dimen/board_content_padding">

    <TextView
        android:id="@+id/board_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="-5dp"
        android:background="@drawable/badge_background"
        android:text="클리앙"
        android:textColor="@color/board_name_color"
        android:textSize="@dimen/board_name_text_size" />

    <TextView
        android:id="@+id/board_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/board_content_title_top_margin"
        android:gravity="center_vertical"
        android:text="titletittletlietlseitltitletittletlietlseitltitletittletlietlseitl"
        android:textColor="@color/board_content_title_color"
        android:textSize="@dimen/board_content_title_text_size"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/board_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/board_content_title_top_margin"
        android:ellipsize="end"
        android:gravity="center_vertical"
        android:lines="2"
        android:text="바디다비답디ㅏ비다비다비다비다ㅣ바다ㅣ비디ㅏㄷ비닫바바바ㅏㅂ바ㅏㅂ디디디디디디디디다ㅏ밥바디다비다비ㅏㄷㄷ비ㅏ바디다비답디ㅏ비다비다비다비다ㅣ바다ㅣ비디ㅏㄷ비닫바바바ㅏㅂ바ㅏㅂ디디디디디디디디다ㅏ밥바디다비다비ㅏㄷㄷ비ㅏ"
        android:textColor="@color/board_content_body_color"
        android:textSize="@dimen/board_content_body_text_size" />

    <LinearLayout
        android:id="@+id/user_info_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="@dimen/board_content_title_top_margin"
        android:background="@drawable/badge_background"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/board_user_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/board_bottom_menu_user_image_height"
            android:scaleType="fitXY" />

        <View
            android:id="@+id/user_margin"
            android:layout_width="4dp"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/board_user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/board_username_color"
            android:textSize="@dimen/board_name_text_size" />
    </LinearLayout>
</LinearLayout>